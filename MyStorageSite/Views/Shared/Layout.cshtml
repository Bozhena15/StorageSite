                @Html.ActionLink("Home", "_ViewStart", "MainPage")
                @Html.ActionLink("Products", "AllProducts", "Home")
                @Html.ActionLink("Orders", "AllOrders", "Home")
                @Html.ActionLink("Register", "Register", "Acount")
                @Html.ActionLink("Login", "Login", "Acount")
            </div>
        </nav>
        <div>
            <form method="post" asp-controller="Acount" aspcontroller="Logout">
                <input type="submit" value="Logout" class="btn btn-outline-dark" >
            </form>
        </div>
        <div>
            @RenderBody()
        </div>
        <footer>
            <p>
                &copy; @DateTime.Now.ToShortDateString()
            </p>
        </footer>
    </body>
</html>
